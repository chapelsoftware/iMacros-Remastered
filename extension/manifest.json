{
  "manifest_version": 3,
  "name": "iMacros",
  "version": "1.0.0",
  "description": "Browser automation and web testing tool",
  "permissions": [
    "tabs",
    "storage",
    "sidePanel",
    "webRequest",
    "webRequestAuthProvider",
    "nativeMessaging",
    "declarativeNetRequest",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "iMacros",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "side_panel": {
    "default_path": "panel.html"
  },
  "options_page": "options.html"
}
