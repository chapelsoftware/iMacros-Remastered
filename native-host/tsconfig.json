{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"],
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@shared/*": ["../shared/src/*"]
    },
    "baseUrl": "."
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "dist-electron"],
  "references": [
    { "path": "../shared" }
  ]
}
