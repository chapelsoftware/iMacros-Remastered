{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "paths": {
      "@shared/*": ["./shared/src/*"]
    },
    "baseUrl": "."
  },
  "files": [],
  "references": [
    { "path": "./shared" },
    { "path": "./native-host" },
    { "path": "./extension" }
  ],
  "exclude": ["node_modules", "dist"]
}
